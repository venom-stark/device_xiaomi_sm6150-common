# define SELinux domain
type hal_drm_widevine, domain;
type hal_drm_widevine_exec, exec_type, vendor_file_type, file_type;
hal_server_domain(hal_drm_widevine, hal_drm);
init_daemon_domain(hal_drm_widevine);

allow hal_drm mediacodec:fd use;
allow hal_drm_widevine vendor_mediadrm_vendor_data_file:dir { add_name  create getattr  write search };
allow hal_drm_widevine vendor_mediadrm_vendor_data_file:file { create  getattr  open  read  write };
allow hal_drm { appdomain -isolated_app }:fd use;
